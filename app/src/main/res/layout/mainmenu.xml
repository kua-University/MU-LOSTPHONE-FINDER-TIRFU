<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Top Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Lost Phone Tracker"
            android:textColor="#0B0B0B"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Bottom Section with Buttons and Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Image + Button (Left) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgTrackPhone"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Track Phone"
                    android:src="@drawable/mk" />

                <Button
                    android:id="@+id/btnTrackPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Track Phone" />
            </LinearLayout>

            <!-- Image + Button (Right) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgLockPhone"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon"
                    android:contentDescription="Lock Phone" />

                <Button
                    android:id="@+id/btnLockPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Lock Phone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Image + Button (Left) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgEraseData"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/eraseee"
                    android:contentDescription="Erase Data" />

                <Button
                    android:id="@+id/btnEraseData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Erase Data" />
            </LinearLayout>

            <!-- Image + Button (Right) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgSettings"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/set"
                    android:contentDescription="Settings" />

                <Button
                    android:id="@+id/btnSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Settings" />
            </LinearLayout>
        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Alarm Sound Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgAlarmSound"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mk"
                    android:contentDescription="Alarm Sound" />

                <Button
                    android:id="@+id/btnAlarmSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Alarm Sound" />
            </LinearLayout>

            <!-- Report to Police Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgReportPolice"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mk"
                    android:contentDescription="Report to Police" />

                <Button
                    android:id="@+id/btnReportPolice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Report to Police" />
            </LinearLayout>

            <!-- See Picture Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgSeePicture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mk"
                    android:contentDescription="See Picture" />

                <Button
                    android:id="@+id/btnSeePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="See Picture" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
